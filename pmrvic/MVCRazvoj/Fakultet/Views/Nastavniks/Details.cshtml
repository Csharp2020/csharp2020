@model Fakultet.Models.Nastavnik

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Nastavnik</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImeNastavnik)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImeNastavnik)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PrezNastavnik)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrezNastavnik)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Koef)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Koef)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PbrStanNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PbrStanNavigation.NazMjesto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SifOrgjedNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SifOrgjedNavigation.NazOrgjed)
        </dd>
    </dl>
</div>
<h3>Predmeti koje predaje:</h3>
<div>
    <!-- (View<Fakultet.Models.PredNastavnik>(nastavnik.PredNastavnik).Items[0]).Predmet.NazPred-->
    <ul>

        @foreach (var item in Model.PredNastavnik)
        {
        <li>
            <a asp-controller="Preds" asp-action="Details" asp-route-id="@item.SifPred">@item.Predmet.NazPred</a>
        </li>
        }
    </ul>
</div>



