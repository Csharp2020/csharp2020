@model EntityFramework.Models.Pred

@{
    ViewData["Title"] = "Details";
    ViewBag.ocjena = ViewData["prosjecna_ocjena"];
    if (ViewBag.ocjena == 0)
    {
        ViewData["prosjecna_ocjena"] = "Ovaj predmet još nitko nije polagao!";
    }
}

<h1>Details</h1> <label>Prosječna ocjena iz predmeta: @ViewData["prosjecna_ocjena"]</label>

<div>
    <h4>Predmet</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.KratPred)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KratPred)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NazPred)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NazPred)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UpisanoStud)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpisanoStud)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BrojSatiTjedno)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BrojSatiTjedno)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SifOrgjedNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SifOrgjedNavigation.NazOrgjed)
        </dd>
    </dl>
</div>
<div>
    <span>Profesori koji predaju ovaj predmet:</span>
    <ul>
        @foreach (var item in Model.PredNastavnik)
        {
            <li>
                <a asp-controller="Nastavniks" asp-action="Details" asp-route-id="@item.SifNastavnik">@item.Nastavnik.PrezNastavnik, @item.Nastavnik.ImeNastavnik</a>
            </li>
        }
    </ul>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.SifPred">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
