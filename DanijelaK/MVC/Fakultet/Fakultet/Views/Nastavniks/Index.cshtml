<!-- model IEnumerable<Fakultet.Models.Nastavnik> -->
@model Fakultet.Lib.PaginatedList<Fakultet.Models.Nastavnik>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().ImeNastavnik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().PrezNastavnik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Koef)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().PbrStanNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().SifOrgjedNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ImeNastavnik)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrezNastavnik)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Koef)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PbrStanNavigation.NazMjesto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SifOrgjedNavigation.NazOrgjed)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SifNastavnik">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.SifNastavnik">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.SifNastavnik">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @nextDisabled">
    Next
</a>



